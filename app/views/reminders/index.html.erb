<h1>Listing reminders</h1>

<table>
  <tr>
    <th>Task</th>
    <th>Frequency</th>
    <th>Starts at</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.task_id %></td>
    <td><%= reminder.frequency %></td>
    <td><%= reminder.starts_at %></td>
    <td><%= reminder.status %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

